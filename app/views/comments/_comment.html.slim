div.comment.form-control
	div.row
		div.col-md-2.comment_user_container.username_link(user_id="#{comment.user.id}")
			img.user_image src=comment.user.image
			div #{comment.user.first_name}
		div.col-md-10
			.comment_text #{comment.parsed_text}
			- if comment.image
				.attachment_container
					a.thumbnail href="#{comment.image_url}" target="_blank"
						img src="#{comment.image_url}"